{
  "name": "mor-request",
  "version": "1.1.6",
  "description": "基于Axios的企业级请求库，提供类型安全的HTTP请求封装",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md"
  ],
  "keywords": [
    "axios",
    "http",
    "request",
    "typescript",
    "promise",
    "api",
    "client",
    "browser",
    "node"
  ],
  "engines": {
    "node": ">=14.0.0"
  },
  "scripts": {
    "dev": "tsc --watch",
    "build": "npm run clean && npm run build:ts && npm run build:esm",
    "build:ts": "tsc -p tsconfig.build.json",
    "build:esm": "tsc -p tsconfig.build.json --module esnext --outDir dist/esm && echo '{\"type\": \"module\"}' > dist/esm/package.json",
    "clean": "rm -rf ./dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "npm run build && npm run test",
    "commit": "git-cz && npm run release:patch && git push && npm run publish:npm",
    "release:major": "standard-version -r major -n",
    "release:minor": "standard-version -r minor -n",
    "release:patch": "standard-version -r patch -n",
    "commit-log": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "publish:npm": "npm publish --registry https://registry.npmjs.org/"
  },
  "standard-version": {
    "skip": {
      "tag": true
    }
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mkRui/Mor-request.git"
  },
  "author": "师聪瑞",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mkRui/Mor-request/issues"
  },
  "homepage": "https://github.com/mkRui/Mor-request#readme",
  "dependencies": {
    "axios": "^1.8.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.10",
    "@typescript-eslint/eslint-plugin": "^7.16.0",
    "@typescript-eslint/parser": "^7.16.0",
    "commitizen": "^4.3.0",
    "conventional-changelog-cli": "^5.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "prettier": "^3.3.2",
    "standard-version": "^9.5.0",
    "ts-jest": "^29.1.5",
    "typescript": "^5.8.3"
  },
  "peerDependencies": {
    "typescript": ">=4.5.0"
  }
}
